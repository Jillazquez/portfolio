---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="page-flow min-h-screen">
		<div class="reveal" style="--order: 0">
			<Header />
		</div>

		<main class="reveal flex flex-1 items-center justify-center px-5 pb-16" style="--order: 1">
			<section class="relative w-full max-w-3xl overflow-hidden rounded-3xl border border-white/10 bg-white/5 px-6 py-12 shadow-[0_40px_160px_rgba(0,0,0,0.45)] backdrop-blur sm:px-12 sm:py-16">
				<div class="pointer-events-none absolute inset-0 select-none opacity-30">
					<div class="absolute -top-24 right-10 h-48 w-48 rounded-full bg-yellow-400/20 blur-3xl" aria-hidden="true"></div>
					<div class="absolute -bottom-32 left-6 h-56 w-56 rounded-full bg-white/10 blur-3xl" aria-hidden="true"></div>
				</div>

				<div class="relative space-y-8 text-center text-white">
					<p class="text-sm uppercase tracking-[0.35em] text-yellow-400">Error 404</p>
					<h1 class="text-4xl font-bold sm:text-5xl">We couldn't find that page</h1>
					<p class="mx-auto max-w-xl text-base text-gray-300 sm:text-lg">
						The route you tried to reach doesn't exist or may have been moved. Letâ€™s get you back to
						the interesting stuff.
					</p>

					<div class="flex flex-col items-center gap-4 pt-4 sm:flex-row sm:justify-center">
						<a
							href="/"
							class="inline-flex w-full items-center justify-center rounded-2xl bg-yellow-400 px-6 py-3 text-sm font-semibold uppercase tracking-[0.2em] text-black shadow-lg shadow-yellow-400/30 transition hover:bg-yellow-300 sm:w-auto"
						>
							Back home
						</a>
						<a
							href="/contact"
							class="inline-flex w-full items-center justify-center rounded-2xl border border-white/20 px-6 py-3 text-sm font-semibold uppercase tracking-[0.2em] text-white transition hover:border-white/40 hover:text-yellow-300 sm:w-auto"
						>
							Contact me
						</a>
					</div>
				</div>
			</section>
		</main>
	</div>
</Layout>